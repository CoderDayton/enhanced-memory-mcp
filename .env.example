# Enhanced Memory MCP Server Configuration
# Copy this to .env and customize as needed
# Created by: malu

# Server Configuration
PORT=3000
HOST=localhost

# Database Configuration  
DB_PATH=./data/memory.db

# Logging Configuration
LOG_LEVEL=info

# AI Extraction Settings (fine-tune these based on your needs)
ENTITY_CONFIDENCE=0.6      # How confident to be about entities (0.0-1.0)
RELATION_CONFIDENCE=0.5    # Confidence threshold for relationships
OBSERVATION_CONFIDENCE=0.7 # Threshold for insights and observations

# Performance Limits
MAX_ENTITIES_PER_MEMORY=10
MAX_RELATIONS_PER_MEMORY=5
MAX_OBSERVATIONS_PER_MEMORY=3

# Auto-cleanup Settings (optional)
AUTO_CLEANUP_ENABLED=false
CLEANUP_OLDER_THAN_DAYS=30
CLEANUP_MIN_STRENGTH=0.1

# Analytics
ENABLE_DETAILED_STATS=true
ENABLE_PERFORMANCE_TRACKING=true
