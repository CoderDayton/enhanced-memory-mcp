{
    "name": "enhanced-memory-mcp",
    "version": "1.2.2",
    "description": "Enhanced MCP memory server with graph-based relationships and intelligent search - built by malu",
    "author": "malu",
    "license": "MIT",
    "main": "dist/mcp-server.js",
    "bin": {
        "enhanced-memory-mcp": "./dist/mcp-server.js"
    },
    "type": "module",
    "homepage": "https://github.com/CoderDayton/enhanced-memory-mcp",
    "repository": {
        "type": "git",
        "url": "https://github.com/CoderDayton/enhanced-memory-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/CoderDayton/enhanced-memory-mcp/issues"
    },
    "keywords": [
        "mcp",
        "memory",
        "graph",
        "duckdb",
        "ai",
        "enhanced",
        "typescript",
        "model-context-protocol",
        "artificial-intelligence",
        "database",
        "analytics"
    ],
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE",
        "package.json"
    ],
    "scripts": {
        "build": "tsc",
        "start": "node dist/enhanced-server.js",
        "start:stdio": "node dist/enhanced-server.js",
        "start:http": "node dist/enhanced-server.js --http",
        "start:http:port": "node dist/enhanced-server.js --http --port",
        "dev": "tsc && npm run start:stdio",
        "dev:http": "tsc && npm run start:http",
        "benchmark": "tsc && node dist/benchmark.js",
        "test:perf": "npm run benchmark",
        "clean": "rm -rf dist",
        "lint": "tsc --noEmit",
        "test": "echo 'Run npm run benchmark for performance testing'",
        "bench": "npx autocannon -c 10 -d 10s http://localhost:3000/health",
        "type-check": "tsc --noEmit",
        "prepublishOnly": "npm run build",
        "prepack": "npm run build"
    },
    "dependencies": {
        "@duckdb/node-api": "^1.3.2-alpha.26",
        "@modelcontextprotocol/sdk": "^1.17.4",
        "cors": "^2.8.5",
        "express": "^4.21.2",
        "uuid": "^9.0.1"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/node": "^24.3.0",
        "@types/uuid": "^10.0.0",
        "autocannon": "^8.0.0",
        "benchmark": "^2.1.4",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
}
